<h2 class="mb-3">Book List</h2>

<div class="row">
    {{#each books}}
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        {{#if title}}
                            {{title}}
                        {{else}}
                            Untitled
                        {{/if}}
                    </h5>
                    <p class="card-text text-muted">
                        {{#if author}}
                            {{author}}
                        {{else}}
                            Anonymous
                        {{/if}}
                    </p>
                    {{#if checkedOut}}
                        <span class="badge bg-danger">Checked Out</span>
                    {{else}}
                        <span class="badge bg-success">Available</span>
                    {{/if}}
                </div>
            </div>
        </div>
    {{/each}}
</div>
